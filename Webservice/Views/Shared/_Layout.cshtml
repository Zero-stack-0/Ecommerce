<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webservice</title>
    @RenderSection("Styles", false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Webservice.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="nav-container">
            <div class="nav-logo">
                <div class="nav-log-img">
                    <img src="~/images/logo.jpg" />
                </div>
                <a asp-action="Index" asp-controller="Home">
                    <div class="logo">
                        E-Buy
                    </div>
                </a>
            </div>
            <div class="nav-middle">
                <div class="nav-product">Moblies</div>
                <div class="nav-product">Tabtles</div>
                <div class="nav-product">Laptops</div>
            </div>
            <div class="nav-account">

                <a asp-action="Login" asp-controller="Account">
                    <div class="account-operation">
                        Login
                    </div>
                </a>

                <a asp-action="SignUp" asp-controller="Account">
                    <div class="account-operation">
                        Sign Up
                    </div>
                </a>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
